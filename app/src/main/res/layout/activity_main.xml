<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:layout_margin="4dp"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    tools:context="com.bugscreator.menu.MainActivity">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_weight="5"
        android:weightSum="9">

        <android.support.v7.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="3"
            android:clickable="true"
            android:elevation="8dp"
            android:foreground="?android:attr/selectableItemBackground">
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                   android:id="@+id/ib1"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_weight="4"
                    android:background="@mipmap/starter"
                    android:elevation="10dp"
                    android:onClick="open" />
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Starters"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_below="@id/ib1"
                />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="3"
            android:elevation="2dp">
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/ib2"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:background="@mipmap/ind"
                    android:elevation="10dp"
                    android:onClick="open" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Indian"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_below="@id/ib2"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="3"
            android:elevation="2dp">
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/ib3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="4dp"
                android:layout_weight="4"
                android:background="@mipmap/chinese"
                android:elevation="10dp"
                android:onClick="open" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Chinese"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_below="@id/ib3"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

   <LinearLayout
       android:id="@+id/ll2"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:weightSum="9"
       android:layout_margin="6dp"
       android:layout_weight="5">

       <android.support.v7.widget.CardView
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_margin="4dp"
           android:layout_weight="3"
           android:elevation="2dp">
           <LinearLayout
               android:orientation="vertical"
               android:weightSum="5"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

           <ImageButton
               android:id="@+id/ib4"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="4"
               android:layout_marginHorizontal="20dp"
               android:background="@mipmap/itl"
               android:elevation="10dp"
               android:onClick="open" />
               <TextView
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="Itelian"
                   android:textAlignment="center"
                   android:textSize="20dp"
                   android:layout_below="@id/ib4"
                   />
           </LinearLayout>
       </android.support.v7.widget.CardView>

       <android.support.v7.widget.CardView
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_margin="4dp"
           android:layout_weight="3"
           android:elevation="2dp">
           <LinearLayout
               android:orientation="vertical"
               android:weightSum="5"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
           <ImageButton
               android:id="@+id/ib5"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="4"
               android:layout_marginHorizontal="20dp"
               android:layout_marginVertical="8dp"
               android:background="@mipmap/juice"
               android:elevation="10dp"
               android:onClick="open" />
               <TextView
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="Juice"
                   android:textAlignment="center"
                   android:textSize="20dp"
                   android:layout_below="@id/ib5"
                   />
           </LinearLayout>
       </android.support.v7.widget.CardView>

       <android.support.v7.widget.CardView
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_margin="4dp"
           android:layout_weight="3"
           android:elevation="2dp">
           <LinearLayout
               android:orientation="vertical"
               android:weightSum="5"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

           <ImageButton
               android:id="@+id/ib6"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="4"
               android:background="@mipmap/desert"
               android:elevation="10dp"
               android:layout_marginHorizontal="20dp"
               android:layout_marginVertical="10dp"
               android:onClick="open" />
               <TextView
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="Desert"
                   android:textAlignment="center"
                   android:textSize="20dp"
                   android:layout_below="@id/ib6"
                   />
           </LinearLayout>
       </android.support.v7.widget.CardView>
   </LinearLayout>
</LinearLayout>


